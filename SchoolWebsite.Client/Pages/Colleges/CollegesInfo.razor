@page "/CollegesInfo"
@using SchoolWebsite.Client.Components
<h3>AddCollege</h3>

<div class="container mt-4">
    @foreach (var college in Colleges)
    {
        <h3 class="text-center">@college.Name University</h3>
        <div class="row">
            <div class="col">
                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Teachers</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var teacher in college.Teachers)
                        {
                            <tr>
                                <td class="hover-column" onclick="window.location.href='@($"/StudentData/{teacher.Id}")'" style="cursor: pointer;">@teacher.Name</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <div class="col">
                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Students</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var student in college.Students)
                        {
                            <tr>
                                <td class="hover-column" onclick="window.location.href='@($"/StudentData/{student.Id}")'" style="cursor: pointer;">@student.Name</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <div class="col">
                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Courses</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var course in college.Courses)
                        {
                            <tr>
                                <td class="hover-column" onclick="window.location.href='@($"/StudentData/{course.Id}")'" style="cursor: pointer;">@course.Name</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    }
    <ValidationMessages alertClass="@validation.alertClass" message="@validation.message"></ValidationMessages>
</div>

<style>
    .hover-column:hover {
        background-color: rgb(236, 236, 236);
        cursor: pointer;
    }
</style>
