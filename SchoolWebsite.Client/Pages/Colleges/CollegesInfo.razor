@page "/"

@using SchoolWebsite.Client.Components
@using SchoolWebsite.shared.Models;

<div class="container mt-4">
    @foreach (var college in Colleges)
    {
        <div class="bg-black p-4 row">
            <h3 class="ps-lg-5 text-white text-center">
                @college.Name University

                <button class="btn col-lg-1 col-sm-12 mt-sm-2 btn-success float-end"
                        onclick="window.location.href='/AddCollege'">
                    <b>+</b>
                </button>
            </h3>
        </div>

        <div class="border border-2 border-dark mb-4 p-3 row">
            <CustomTable Header="Teachers" Items="@(college.Teachers)" ItemType="Teacher"></CustomTable>
            <CustomTable Header="Students" Items="@(college.Students)" ItemType="Student"></CustomTable>
            <CustomTable Header="Courses" Items="@(college.Courses)" ItemType="Course"></CustomTable>
        </div>
    }
    <ValidationMessages alertClass="@validation.AlertClass" message="@validation.message"></ValidationMessages>
</div>
