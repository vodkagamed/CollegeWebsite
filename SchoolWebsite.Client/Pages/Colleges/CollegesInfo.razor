@page "/"
@using SchoolWebsite.Client.Components

<div class="container mt-4">
    @foreach (var college in Colleges)
    {
        <div class="bg-black p-lg-4 p-sm-5 row">
            <h3 class="ps-lg-5 text-white text-center">
                @college.Name University

                <button class="btn col-sm-12 btn-success float-end col-lg-1"
                        onclick="window.location.href='/AddCollege'">
                    <b>+</b>
                </button>
            </h3>
        </div>
        <div class="border border-2 border-dark mb-4 p-3 row">
            <CustomTable Header="Teachers" Items="@(college.Teachers.Cast<Teacher>().ToList())" ItemType="Teacher"></CustomTable>
            <CustomTable Header="Students" Items="@(college.Students.Cast<Student>().ToList())" ItemType="Student"></CustomTable>
            <CustomTable Header="Courses" Items="@(college.Courses.Cast<Course>().ToList())" ItemType="Course"></CustomTable>
        </div>
    }
    <ValidationMessages alertClass="@validation.alertClass" message="@validation.message"></ValidationMessages>
</div>

<style>
    .hover-column:hover {
        background-color: rgb(236, 236, 236);
        cursor: pointer;
    }
</style>
